<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraRecordActivity"
    tools:layout_editor_absoluteX="181dp"
    tools:layout_editor_absoluteY="322dp">

        <Button android:text="Capture Video"
            android:id="@+id/CaptureVideoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Button>

    <Button
        android:id="@+id/setPermissionsButton"
        android:text="Set Permissions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Button>
        <Button android:text="Play Video"
            android:id="@+id/PlayVideoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </Button>

        <VideoView
            android:id="@+id/VideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></VideoView>
</LinearLayout>

